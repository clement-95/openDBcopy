<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    Installation configuration for opendbcopy us IzPack
-->

<installation version="1.0">

    <info>
        <appname>opendbcopy</appname>
        <appversion>0.41.1</appversion>
        <authors>
            <author name="Anthony Smith" email="smith@puzzle.ch"/>
        </authors>
        <url>http://opendbcopy.sourceforge.net/</url>
    </info>
    
    <guiprefs width="640" height="480" resizable="yes"/>

    <native type="izpack" name="ShellLink.dll"/>
    
    <locale>
        <langpack iso3="eng"/>
	    <langpack iso3="deu"/>
        <langpack iso3="fra"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="LICENSE.txt"/>
        <res id="InfoPanel.info" src="README.txt"/>
	  	<res id="shortcutSpec.xml" src="c:\opendbcopy\shortcutSpec.xml"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
  	    <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <packs>
        <pack name="Base" required="yes" preselected="yes">
            <description>Opendbcopy</description>
            <file src="README.txt" targetdir="$INSTALL_PATH"/>
            <file src="LICENSE.txt" targetdir="$INSTALL_PATH"/>
            <file src="WHATSNEW.txt" targetdir="$INSTALL_PATH"/>
            <file src="AUTHORS.txt" targetdir="$INSTALL_PATH"/>
            <file src="KNOWNBUGS.txt" targetdir="$INSTALL_PATH"/>
            <file src="ChangeLog.txt" targetdir="$INSTALL_PATH"/>
            <file src="start.bat" targetdir="$INSTALL_PATH"/>
            <file src="start.sh" targetdir="$INSTALL_PATH"/>
            <file src="log" targetdir="$INSTALL_PATH"/>
            <file src="conf" targetdir="$INSTALL_PATH"/>
            <file src="plugins" targetdir="$INSTALL_PATH"/>
            <file src="lib" targetdir="$INSTALL_PATH"/>
        </pack>

        <pack name="Documentation" required="no" preselected="yes">
            <description>The complete documentation (see http://opendbcopy.sourceforge.net/</description>
            <file src="docs" targetdir="$INSTALL_PATH"/>
        </pack>

        <pack name="Sources" required="no" preselected="no">
            <description>Source Codes (for developers only)</description>
            <file src="src" targetdir="$INSTALL_PATH"/>
            <file src=".project" targetdir="$INSTALL_PATH"/>
            <file src=".classpath" targetdir="$INSTALL_PATH"/>
            <file src="jalopy_settings_opendbcopy.xml" targetdir="$INSTALL_PATH"/>
            <file src="build.xml" targetdir="$INSTALL_PATH"/>
        </pack>

        <pack name="API Docs" required="no" preselected="no">
            <description>API Docs (for developers only)</description>
            <file src="apidocs" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>
    
</installation>
